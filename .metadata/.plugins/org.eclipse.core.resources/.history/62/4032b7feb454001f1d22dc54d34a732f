package semana1;

import java.util.Scanner;

public class _03_Conversor {

    public static void main(String[] args) {
        // Crear un objeto Scanner para leer la entrada del usuario
        Scanner scanner = new Scanner(System.in);

        // Mostrar el menú de opciones
        System.out.println("Selecciona una conversión:");
        System.out.println("1. Celsius a Fahrenheit");
        System.out.println("2. Fahrenheit a Celsius");

        // Leer la opción seleccionada
        int opcion = scanner.nextInt();

        // Pedir al usuario que ingrese la temperatura
        System.out.println("Ingresa la temperatura:");
        double temperatura = scanner.nextDouble();

        double resultado;

        // Realizar la conversión según la opción seleccionada
        switch(opcion) {
            case 1:
                // Completa la conversión de Celsius a Fahrenheit
                resultado = (temperatura * 9/5) + 32;
                System.out.println(temperatura + " grados Celsius son " + resultado + " grados Fahrenheit.");
                break;
            case 2:
                // Completa la conversión de Fahrenheit a Celsius
                resultado = (temperatura - 32) * 5/9;
                System.out.println(temperatura + " grados Fahrenheit son " + resultado + " grados Celsius.");
                break;
            default:
                System.out.println("Opción no válida.");
                break;
        }
        
        // Cierra el Scanner
        scanner.close();
    }
}