package semana1;
 
import java.util.Scanner;

public class _01_Saludo {
	public static void main(String[] args) {
		// Creamos un objeto Scanner para leer la entrada del usuario
		Scanner scanner = new Scanner(System.in);

		// Pedimos al usuario que ingrese su nombre
		System.out.println("Por favor, ingresa tu nombre:");

		// Leer el nombre del usuario y almacenarlo en una variable
		String nombre = scanner.nextLine();

		// Saludar al usuario de manera personalizada
		System.out.println("Hola, " + nombre + "! Bienvenido/a al curso de programaci√≥n.");

		// Cierramos el Scanner
		scanner.close();
	}
}
